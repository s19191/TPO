<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <context-param>
        <param-name>presentationServletSearch</param-name>
        <param-value>/presentationSearch</param-value>
    </context-param>

    <context-param>
        <param-name>presentationServletAllBooks</param-name>
        <param-value>/presentationAllBooks</param-value>
    </context-param>

    <context-param>
        <param-name>getParamsServletSearch</param-name>
        <param-value>/getParamsSearch</param-value>
    </context-param>

    <context-param>
        <param-name>getParamsServletAllBooks</param-name>
        <param-value>/getParamsAllBooks</param-value>
    </context-param>

    <context-param>
        <param-name>ResBundleServletSearch</param-name>
        <param-value>/resBundleSearch</param-value>
    </context-param>

    <context-param>
        <param-name>ResBundleServletAllBooks</param-name>
        <param-value>/resBundleAllBooks</param-value>
    </context-param>

    <context-param>
        <param-name>resBundleSearchName</param-name>
        <param-value>DbAccessDef_plSearch</param-value>
    </context-param>

    <context-param>
        <param-name>resBundleAllBooksName</param-name>
        <param-value>DbAccessDef_plAllBooks</param-value>
    </context-param>

    <context-param>
        <param-name>dbName</param-name>
        <param-value>jdbc/ksidb</param-value>
    </context-param>

    <context-param>
        <param-name>commandSearchClassName</param-name>
        <param-value>DbAccessSearch</param-value>
    </context-param>

    <context-param>
        <param-name>commandAllBooksClassName</param-name>
        <param-value>DbAccessAllBooks</param-value>
    </context-param>

    <servlet>
        <servlet-name>ErrorHandler</servlet-name>
        <servlet-class>ErrorHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ErrorHandler</servlet-name>
        <url-pattern>/errorhandler</url-pattern>
    </servlet-mapping>

    <error-page>
        <exception-type>DbAccessException</exception-type>
        <location>/errorhandler</location>
    </error-page>

    <servlet>
        <servlet-name>GetParamsServletSearch</servlet-name>
        <servlet-class>GetParamsServletSearch</servlet-class>
        <init-param>
            <param-name>startForm</param-name>
            <param-value>start.html</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>GetParamsServletSearch</servlet-name>
        <url-pattern>/getParamsSearch</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetParamsServletAllBooks</servlet-name>
        <servlet-class>GetParamsServletAllBooks</servlet-class>
        <init-param>
            <param-name>startForm</param-name>
            <param-value>start.html</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>GetParamsServletAllBooks</servlet-name>
        <url-pattern>/getParamsAllBooks</url-pattern>
    </servlet-mapping>
</web-app>